<div class="container">
	<h1>Topics</h1
	<% @topics.each do |topic| %>
	<p><a href="topics/<%= topic.id %>"><%= topic.title %></a>
	<% end %>


	<form action="/topics" method="Post">
	  <input type="text" name="topic_title" placeholder="Add a Topic" >
	  <br><br>
	  <input type="submit" value="SUBMIT" >
	</form>
</div>
